{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "develop": "yarn workspace mcu-public-site develop",
    "clean": "yarn workspace mcu-public-site clean && yarn workspace mcu-private-site clean",
    "build": "yarn run clean && yarn workspace mcu-public-site build",
    "serve": "yarn workspace mcu-public-site serve"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "lerna": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "version": "0.0.0",
  "name": "my-cargo-us"
}
