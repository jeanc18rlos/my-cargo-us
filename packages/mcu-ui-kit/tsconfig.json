{
  "compilerOptions": {
    "outDir": "build",
    "module": "ES6",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "types": ["react", "jest", "node"],
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["src", ".storybook"],
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", ".storybook/**/*", "src/custom.d.ts"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    ".storybook",
    "src/internal",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}
